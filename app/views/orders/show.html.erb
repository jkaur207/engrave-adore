<h1>Order Details</h1>

<p><strong>Order Status:</strong> <%= @order.order_status.capitalize %></p>
<p><strong>Billing Address:</strong> <%= @order.billing_address %></p>
<p><strong>Delivery Address:</strong> <%= @order.delivery_address %></p>
<p><strong>Subtotal:</strong> <%= number_to_currency(@order.subtotal) %></p>
<p><strong>Tax Amount:</strong> <%= number_to_currency(@order.tax_amount) %></p>
<p><strong>Total:</strong> <%= number_to_currency(@order.total) %></p>

<h2>Order Items</h2>
<table class="table">
  <thead>
    <tr>
      <th>Product</th>
      <th>Quantity</th>
      <th>Unit Price</th>
      <th>Total Price</th>
    </tr>
  </thead>
  <tbody>
    <% @order.order_items.each do |item| %>
      <tr>
        <td><%= item.product.name %></td>
        <td><%= item.quantity %></td>
        <td><%= number_to_currency(item.unit_price) %></td>
        <td><%= number_to_currency(item.quantity * item.unit_price) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<hr>

<h2 class="page-title" style="font-size: 2.5rem; color: #333; text-align: center; margin-top: 30px;">Update Your Profile</h2>

<p class="intro-text" style="font-size: 1.2rem; color: #666; text-align: center; margin-bottom: 30px; font-style: italic;">
  Weâ€™re so glad youâ€™re here! Take a moment to update your profile and make it shine âœ¨.
</p>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: 'profile-form', style: 'max-width: 500px; margin: 0 auto; padding: 20px; background-color: #f9f9f9; border-radius: 10px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);' }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field mb-4" style="margin-bottom: 20px;">
    <%= f.label :email, class: "form-label", style: "font-weight: bold; color: #333;" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", style: 'width: 100%; padding: 10px; margin-top: 5px; border: 1px solid #ccc; border-radius: 5px; font-size: 1rem;' %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div class="alert alert-info confirmation-alert" style="background-color: #e3f2fd; color: #2196f3; padding: 10px; border-radius: 5px; margin-bottom: 20px;">
      You're almost there! Please confirm your new email: <%= resource.unconfirmed_email %> .
    </div>
  <% end %>

  <!-- New Fields -->
  <div class="field mb-4" style="margin-bottom: 20px;">
    <%= f.label :username, class: "form-label", style: "font-weight: bold; color: #333;" %><br />
    <%= f.text_field :username, class: "form-control", style: 'width: 100%; padding: 10px; margin-top: 5px; border: 1px solid #ccc; border-radius: 5px; font-size: 1rem;' %>
  </div>

  <div class="field mb-4" style="margin-bottom: 20px;">
    <%= f.label :phone_number, class: "form-label", style: "font-weight: bold; color: #333;" %><br />
    <%= f.telephone_field :phone_number, class: "form-control", style: 'width: 100%; padding: 10px; margin-top: 5px; border: 1px solid #ccc; border-radius: 5px; font-size: 1rem;' %>
  </div>

  <div class="field mb-4" style="margin-bottom: 20px;">
    <%= f.label :address, class: "form-label", style: "font-weight: bold; color: #333;" %><br />
    <%= f.text_area :address, rows: 4, class: "form-control", style: 'width: 100%; padding: 10px; margin-top: 5px; border: 1px solid #ccc; border-radius: 5px; font-size: 1rem;' %>
  </div>

  <div class="field mb-4" style="margin-bottom: 20px;">
    <%= f.label :password, class: "form-label", style: "font-weight: bold; color: #333;" %>
    <small style="color: #666;">(Only fill in if you want to change your password )</small><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control", style: 'width: 100%; padding: 10px; margin-top: 5px; border: 1px solid #ccc; border-radius: 5px; font-size: 1rem;' %>
    <% if @minimum_password_length %>
      <br />
      <small class="password-info" style="color: #999; font-size: 0.9rem;"><%= @minimum_password_length %> characters minimum for a strong password ðŸ”’.</small>
    <% end %>
  </div>

  <div class="field mb-4" style="margin-bottom: 20px;">
    <%= f.label :password_confirmation, class: "form-label", style: "font-weight: bold; color: #333;" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", style: 'width: 100%; padding: 10px; margin-top: 5px; border: 1px solid #ccc; border-radius: 5px; font-size: 1rem;' %>
  </div>

  <div class="field mb-4" style="margin-bottom: 20px;">
    <%= f.label :current_password, class: "form-label", style: "font-weight: bold; color: #333;" %>
    <small style="color: #666;">(Please enter your current password to confirm any changes )</small><br />
    <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control", style: 'width: 100%; padding: 10px; margin-top: 5px; border: 1px solid #ccc; border-radius: 5px; font-size: 1rem;' %>
  </div>

  <div class="actions mb-4" style="margin-bottom: 20px;">
    <%= f.submit "Save Changes", class: "btn btn-submit w-100", style: 'background-color: #5c6bc0; color: white; border: none; padding: 12px; font-size: 1.1rem; border-radius: 5px; cursor: pointer;' %>
  </div>
<% end %>

<p class="support-text" style="font-size: 1rem; text-align: center; color: #666; margin-top: 20px;">
  If you need help with any changes, feel free to reach out to us. We're always here for you!
</p>

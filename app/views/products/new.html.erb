<h1>New Product</h1>

<%= form_with(model: @product, local: true) do |form| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>
      <ul>
        <% @product.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description, class: "form-control" %>
  </div>

  <div class="field">
    <%= form.label :price %>
    <%= form.number_field :price, class: "form-control", step: 0.01 %>
  </div>

  <!-- Category Selection -->
  <div class="field">
    <%= form.label :category_ids, "Select Categories" %><br>
    <%= form.collection_check_boxes(:category_ids, Category.all, :id, :name) do |cb| %>
      <div class="form-check">
        <%= cb.check_box(class: "form-check-input") %>
        <%= cb.label(class: "form-check-label") %>
      </div>
    <% end %>
  </div>

  <!-- Active Storage File Upload for Image -->
  <div class="field">
    <%= form.label :image %>
    <%= form.file_field :image, class: "form-control" %>
  </div>

  <div class="actions">
    <%= form.submit "Create Product", class: "btn btn-primary" %>
  </div>
<% end %>

<%= link_to 'Back', products_path, class: "btn btn-secondary mt-3" %>

<h1><%= @product.name %></h1>
<p><%= @product.description %></p>
<p><%= @product.price %></p>

<% if @product.image.attached? %>
  <%= image_tag @product.image %> <!-- Display the image -->
<% else %>
  <p>No image available</p>
<% end %>

<%= link_to "Edit", edit_product_path(@product) %> |
<%= link_to "Back", products_path %>
